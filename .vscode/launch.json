{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start CareerBoost Platform",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["server/index.ts"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "5000",
        "HOST": "127.0.0.1"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node"
    }
  ]
}